@model IEnumerable<Training>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Training</a>
</p>

<table class="table" id="trainingTable">
    <thead>
        <tr>
            <th>Date</th>
            <th>Place</th>
            <th>Purpose</th>
            <th>Organization</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TrainingDate.ToShortDateString()</td>
                <td>@item.Place</td>
                <td>@item.Purpose</td>
                <td>@item.Organization?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.TrainingId">View</a> |
                    <a asp-action="Delete" asp-route-id="@item.TrainingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#trainingTable').DataTable();
    });
</script>