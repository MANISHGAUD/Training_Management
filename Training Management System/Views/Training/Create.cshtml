@using Training_Management_System.ViewModel
@model TrainingViewModel

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Organization</label>
        <select asp-for="OrganizationId" asp-items="ViewBag.Organizations" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Date</label>
        <input asp-for="TrainingDate" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label>Place</label>
        <input asp-for="Place" class="form-control" />
    </div>
    <div class="form-group">
        <label>Purpose</label>
        <input asp-for="Purpose" class="form-control" />
    </div>
    <div class="form-group">
        <label>Employees</label>
        <select asp-for="SelectedEmployeeIds" asp-items="ViewBag.Employees" class="form-control" multiple></select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <button type="reset" class="btn btn-secondary">Clear</button>
</form>


